@model IEnumerable<MvcMovie.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Movies" asp-action="Index" method="get">

    <div class="form-group row">
        <label for="title" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="title" placeholder="Search Movie" name="SearchString">
        </div>
    </div>

    <div class="form-group row">
        <label for="Sort" class="col-sm-2 col-form-label">Sort By: </label>
        <div class="col-sm-4">
            <select name="sortBy" class="custom-select">
                <option value="" selected disabled>Choose</option>
                <option value="title">Title</option>
                <option value="releaseDate">Release Date</option>
                <option value="genre">Genre</option>
                <option value="price">Price</option>
            </select>
        </div>
    </div>


    <div class="form-group row ">
        <div class="col-sm-4">
            <input type="submit" value="Search" />
        </div>
      
    </div>
    

</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                <a  asp-action= "Index" asp-route-sortBy="@ViewData["Date"]" class="mx-1">
                    @Html.DisplayNameFor(model => model.ReleaseDate)
                </a>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <span class="d-inline-block text-truncate" style="max-width: 200px;">
                    @Html.DisplayFor(modelItem => item.ImageUrl)
                </span>
               
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.GenreName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
