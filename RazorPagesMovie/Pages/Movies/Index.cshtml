@page "{searchString?}"
@model RazorPagesMovie.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Index";
}








<!-- Hero Section -->

<!-- Apply your Parallax background image here -->
<div class="gradient-overlay-half-white-v1 bg-img-hero rounded-lg"
    style='background-image:url(https://image.tmdb.org/t/p/original//h48Dpb7ljv8WQvVdyFWVLz64h4G.jpg);'>
    <div class="container position-relative z-index-2 space-2-top space-3-bottom space-4--lg">
        <div class="row justify-content-lg-between align-items-lg-center align-items-center">
            <div class="col-lg-10 mb-9 mb-lg-0">
                <!-- Description -->
                <div class="mb-5 text-light">
                    <span class="d-block text-uppercase mb-2">Search Movie in a Second</span>
                    <h3 class="display-4 font-size-48--md-down">Razor Page Movie</h3>
                </div>

                <!-- Card -->

                <div class="card p-2 mb-3">
                    <!-- Input Group -->
                    <form id="form">
                        <div class="row"></div>
                        <div class="form-row input-group-borderless">
                            <div class="col-md mb-2 mb-md-0">

                                <select asp-for="MovieGenre" asp-items="Model.Genres" class="form-control form-select">
                                    <option value="" required>All</option>
                                </select>
                            </div>

                            <div class="col-md d-sm-none">
                                <hr class="my-0" />
                            </div>

                            <div class="col-md column-divider-sm mb-2 mb-md-0">
                                <input type="text" asp-for="SearchString" class="form-control" placeholder="Title" />

                            </div>


                            <div class="col-md-auto">
                                <input type="submit" class="btn btn-block btn-outline-primary px-5" value="Filter" />
                            </div>
                            <div class="col-md-auto">

                                <a asp-page="Create" class="btn btn-block btn-info">Create New</a>
                            </div>
                        </div>
                        <!-- End Input Group -->
                    </form>
                </div>
                <!-- End Card -->

            </div>




        </div>
    </div>
</div>



<!-- End Hero Section -->

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Movie[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movie[0].ReleaseDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movie[0].Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movie[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movie[0].Rating)
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movie)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
